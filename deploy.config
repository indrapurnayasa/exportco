# Hackathon Service VPS Deployment Configuration
# Edit these settings before running the deployment script

# Application Configuration
APP_NAME="hackathon-service"
APP_DIR="/opt/$APP_NAME"
PORT=8000

# Conda Environment
CONDA_ENV_NAME="hackathon-env"

# Domain and SSL Configuration
# Set these to enable HTTPS with automatic SSL certificate
# For IP-only access, set DOMAIN_NAME to your VPS IP address
DOMAIN_NAME="your-domain.com"  # Replace with your actual domain or IP address
EMAIL="your-email@example.com"  # Replace with your email for SSL certificate

# Database Configuration
POSTGRES_DB="hackathondb"
POSTGRES_USER="maverick"
POSTGRES_PASSWORD="Hackathon2025"
POSTGRES_HOST="localhost"  # This is correct for same VPS
POSTGRES_PORT="5432"

# Production Settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1

# Cache settings (Redis removed)
CACHE_TTL=300
CACHE_MAX_SIZE=1000

# Query Limits
MAX_QUERY_LIMIT=1000
QUERY_TIMEOUT=8

# Logging
LOG_LEVEL="INFO"

# Uvicorn Workers (adjust based on your server's CPU cores)
UVICORN_WORKERS=4

# Firewall Configuration
# Set to true to configure UFW firewall
CONFIGURE_FIREWALL=false
FIREWALL_ALLOW_SSH=true
FIREWALL_ALLOW_HTTP=true
FIREWALL_ALLOW_HTTPS=true

# Backup Configuration
# Set to true to enable automatic backups
ENABLE_BACKUPS=false
BACKUP_RETENTION_DAYS=7
BACKUP_DIR="/opt/backups"

# Monitoring Configuration
# Set to true to install basic monitoring
ENABLE_MONITORING=false 